generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  name        String
  email       String    @unique
  password    Password?
  permits     Boolean   @default(false)
}

model Password {
  hash      String
  userId    String    @unique
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model PersonalData {
  id 		      String    @id @default(cuid())
  name 		    String
  DNI 		    String    //make unique in production
  birth 	    DateTime
  kids 		    Int
  address 	  String
  tel 		    String
  obvs 		    String
  workData    WorkData?
}

model WorkData {
  personalId      String          @unique
  personalData    PersonalData?   @relation(fields: [personalId], references: [id])
  ant 		        DateTime
  cond 		        String
  studies 	      String
  studies_grade   String
  area 		        String
  disp 		        String
}

model Admin {
  id            String  @id @default(cuid())
  admin_name    String  @unique
  password      AdminPassword?
}

model AdminPassword {
  hash      String
  adminId   String    @unique
  admin     Admin?     @relation(fields: [adminId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}