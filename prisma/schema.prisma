// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id  String  @id @default(cuid())
  name  String 
  email String @unique
  password Password?
}

model Password {
  hash String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model PersonalData{
  id String @id @default(cuid())
  name String
  DNI Int
  birth DateTime
  kids Int
  address String
  tel Int
  obvs String
}

model WorkData{
  id String @id @default(cuid())
  ant String
  cond String
  studies String
  area String
  a_cargo String
  disp String
}