generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid())
  name     String
  email    String    @unique
  password Password?
}

model Password {
  hash   String
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PersonalData {
  id String @id @default(cuid())
  name String
  DNI String
  birth DateTime
  kids Int
  address String
  tel String
  obvs String
}

model WorkData {
  id String @id @default(cuid())
  ant String
  cond String
  studies String
  area String
  a_cargo String
  disp String
}